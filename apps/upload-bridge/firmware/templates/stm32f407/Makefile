# Makefile for STM32F407 LED Pattern Player
# Generated by Upload Bridge

# Target name
TARGET = stm32f407_pattern_player

# MCU settings
MCU = STM32F407
F_CPU = 168000000UL

# Toolchain
PREFIX = arm-none-eabi-
CC = $(PREFIX)gcc
OBJCOPY = $(PREFIX)objcopy
OBJDUMP = $(PREFIX)objdump
SIZE = $(PREFIX)size

# Compiler flags
CFLAGS = -mcpu=cortex-m4 -mthumb -Os -Wall -Wextra
CFLAGS += -ffunction-sections -fdata-sections
CFLAGS += -std=c99 -DSTM32F407xx
CFLAGS += -DF_CPU=$(F_CPU)

# Include paths
INCLUDES = -I. -I../common

# Linker flags
LDFLAGS = -mcpu=cortex-m4 -mthumb -Wl,--gc-sections
LDFLAGS += -T stm32f407.ld

# Source files
SOURCES = professional_pattern_player.c
OBJECTS = $(SOURCES:.c=.o)

# Default target
all: $(TARGET).bin

# Compile object files
%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

# Link executable
$(TARGET).elf: $(OBJECTS)
	$(CC) $(LDFLAGS) -o $@ $^

# Create binary file
$(TARGET).bin: $(TARGET).elf
	$(OBJCOPY) -O binary $< $@
	$(SIZE) $<

# Upload to device
upload: $(TARGET).bin
	stm32flash -w $(TARGET).bin -v -g 0x0 /dev/ttyUSB0

# Clean build files
clean:
	rm -f *.o *.elf *.bin

# Show help
help:
	@echo "Available targets:"
	@echo "  all     - Build binary file"
	@echo "  upload  - Upload to STM32F407"
	@echo "  clean   - Remove build files"
	@echo "  help    - Show this help"

.PHONY: all upload clean help
