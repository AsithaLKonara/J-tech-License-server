# Makefile for Nuvoton M051 LED Pattern Player
# Generated by Upload Bridge

# Target name
TARGET = nuvoton_m051_pattern_player

# MCU settings
MCU = Nuvoton_M051
F_CPU = 48000000UL

# Toolchain
PREFIX = arm-none-eabi-
CC = $(PREFIX)gcc
OBJCOPY = $(PREFIX)objcopy
OBJDUMP = $(PREFIX)objdump
SIZE = $(PREFIX)size

# Compiler flags
CFLAGS = -mcpu=cortex-m0 -mthumb -Os -Wall -Wextra
CFLAGS += -ffunction-sections -fdata-sections
CFLAGS += -std=c99 -DNUVOTON_M051
CFLAGS += -DF_CPU=$(F_CPU)

# Include paths
INCLUDES = -I. -I../common

# Linker flags
LDFLAGS = -mcpu=cortex-m0 -mthumb -Wl,--gc-sections
LDFLAGS += -T nuvoton_m051.ld

# Source files
SOURCES = professional_pattern_player.c
OBJECTS = $(SOURCES:.c=.o)

# Default target
all: $(TARGET).bin

# Compile object files
%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

# Link executable
$(TARGET).elf: $(OBJECTS)
	$(CC) $(LDFLAGS) -o $@ $^

# Create binary file
$(TARGET).bin: $(TARGET).elf
	$(OBJCOPY) -O binary $< $@
	$(SIZE) $<

# Upload to device
upload: $(TARGET).bin
	nu-link -w $(TARGET).bin

# Clean build files
clean:
	rm -f *.o *.elf *.bin

# Show help
help:
	@echo "Available targets:"
	@echo "  all     - Build binary file"
	@echo "  upload  - Upload to Nuvoton M051"
	@echo "  clean   - Remove build files"
	@echo "  help    - Show this help"

.PHONY: all upload clean help
