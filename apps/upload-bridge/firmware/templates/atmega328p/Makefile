# Makefile for ATmega328P LED Pattern Player
# Generated by Upload Bridge

# Target name
TARGET = atmega328p_pattern_player

# MCU settings
MCU = atmega328p
F_CPU = 16000000UL

# Compiler settings
CC = avr-gcc
OBJCOPY = avr-objcopy
OBJDUMP = avr-objdump
SIZE = avr-size

# Compiler flags
CFLAGS = -mmcu=$(MCU) -DF_CPU=$(F_CPU) -Os -Wall -Wextra
CFLAGS += -ffunction-sections -fdata-sections
CFLAGS += -std=c99

# Linker flags
LDFLAGS = -mmcu=$(MCU) -Wl,--gc-sections

# Source files
SOURCES = atmega328p.c
OBJECTS = $(SOURCES:.c=.o)

# Default target
all: $(TARGET).hex

# Compile object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Link executable
$(TARGET).elf: $(OBJECTS)
	$(CC) $(LDFLAGS) -o $@ $^

# Create hex file
$(TARGET).hex: $(TARGET).elf
	$(OBJCOPY) -O ihex -R .eeprom $< $@
	$(SIZE) $<

# Upload to device
upload: $(TARGET).hex
	avrdude -p $(MCU) -c arduino -P COM3 -b 57600 -U flash:w:$(TARGET).hex:i

# Clean build files
clean:
	rm -f *.o *.elf *.hex

# Show help
help:
	@echo "Available targets:"
	@echo "  all     - Build hex file"
	@echo "  upload  - Upload to ATmega328P"
	@echo "  clean   - Remove build files"
	@echo "  help    - Show this help"

.PHONY: all upload clean help

